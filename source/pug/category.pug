extends ./templates/base

block variables
	- var classBody = 'category-page'
	- var classWrapper = 'category'

block title
	title Мужская одежда

block main
	section.breadcrumb
		.container
			.breadcrumb__block
				ul.clearfix
					li
						a(href='./') Главная
					li
						a(href='./') Для него
					li.
						Одежда
	section.category
		.main-title
			h2 Мужская одежда
			p.
				Former Oscar winners looking fresh, via Benjamin
		.container
			.row
				.col-xs-12.col-sm-7.col-sm-push-5.col-md-8.col-md-push-4.col-lg-9.col-lg-push-3
					.category__right
						.category__head
							.category__head-left
								p Сортировать:
								select.selectpicker.custom-picker(title='Сначала новые', required)
									- var sort = ['Сначала новые', 'Сначала старые', 'Популярные', 'Рейтинг']
									each name in sort
										option(value= name)= name
							.category__head-right
								.pagination
									a(href="#").prev
									p.page Страница
									span.current 1
									p.total из 7
									a(href="#").next
						.category__main
							mixin categoryBox(link, img, hidden, name, text, price)
								li.col-lg-4.col-md-6
									.popular__box
										a(href='#').popular__star
											span.fa.fa-star
										.popular__img
											img(src=require('../components/images/' + img + '.png'), class='popular__pic', alt='pic')
											img(src=require('../components/images/' + hidden + '.png'), class='popular__hidden', alt='pic')
											.popular__size
												.slider.slick-size
													- var sizes = ['XS', 'S', 'M', 'L', 'XL', 'XXL']
													each name in sizes
														div
															a(href= link).slick-size__box= name
										.popular__info
											h3.popular__name= name
											.popular__text
												p= text
											p.popular__price= price
							ul.row
								- var img = [1, 3, 4, 5, 6, 3]
								each name in img
									+categoryBox('product-pg.html', 'popular-' + name, 'popular-2', 'dorateymur', 'Gucci Cities print sweatshirt', '£ 1200')
						.category__bottom
							.category__bottom-left
								.category__choose-sort
									p Сортировать:
									select.selectpicker.custom-picker.custom-picker-sort(title='Сначала новые', required)
										each name in sort
											option(value= name)= name
								.category__choose-size
									p Показать:
									select.selectpicker.custom-picker.custom-picker-size(title='44', required)
										- var sizeNum = ['44', '48', '52', '56', '60']
										each name in sizeNum
											option(value= name)= name
							.category__bottom-right
								.pagination
									a(href="#").prev
									p.page Страница
									span.current 1
									p.total из 7
									a(href="#").next
						.recomend
							ul.nav.nav-tabs
								li.active
									a(href="#recomend", data-toggle='tab') Рекомендации
								li
									a(href="#viewed", data-toggle='tab') Вы просматривали
							mixin recomendBox(link, img, hidden, name, text, price)
								div
									a(href= link).popular__box
										.popular__img
											img(src=require('../components/images/' + img + '.png'), class='popular__pic', alt='pic')
											img(src=require('../components/images/' + hidden + '.png'), class='popular__hidden', alt='pic')
										.popular__info
											h3.popular__name= name
											.popular__text
												p= text
											p.popular__price= price
							.tab-content
								#recomend.tab-pane.fade.in.active
									.slider.category-recomend
										- var recbox = 12
										- for(var i = 0; i < recbox; i++) {
											+recomendBox('product-pg.html', 'popular-1', 'popular-2', 'dorateymur', 'Gucci Cities print sweatshirt', '£ 1200')
										- }
									.slideruiRecomend
								#viewed.tab-pane.fade.in
									.slider.category-viewed
										- for(var i = 0; i < recbox; i++) {
											+recomendBox('product-pg.html', 'popular-1', 'popular-2', 'dorateymur', 'Gucci Cities print sweatshirt', '£ 1200')
										- }
									.slideruiViewed
				.col-xs-12.col-sm-5.col-sm-pull-7.col-md-4.col-md-pull-8.col-lg-3.col-lg-pull-9
					.category__left
						form
							.category__find
								p Найдено:
									span 400 товаров
							.category__sort
								p Отсортировать по:
								a(href="#") очистить все
							#accordion.panel-group
								.panel.panel-default
									.panel-heading
										h4.panel-title
											a(data-toggle='collapse', data-parent='#accordion', href='#collapse1', aria-expanded="false")
												| Показать новинки
												object
													a(href='./').clear Очистить
									#collapse1.panel-collapse.collapse
										.panel-body
											p Новинки
								.panel.panel-default
									.panel-heading
										h4.panel-title
											a(data-toggle='collapse', data-parent='#accordion', href='#collapse2', aria-expanded="true")
												| Цвет
												object
													a(href='#').clear Очистить
									#collapse2.panel-collapse.collapse.in
										.panel-body
											.scrollbar-inner
												mixin checkbox(className, forname, nameGroup, name, id)
													div(class="checkbox" + ' ' + className)
														label(for= forname)
															input(type='checkbox', name= nameGroup, value='', id= id)
															span.checkbox__ok
															|
															= name
												.checkbox
													label(for='color1')
														input(type='checkbox', name='color', value='', id='color1', checked)
														span.checkbox__ok
														| Черный
												+checkbox('none', 'color2', 'color', 'Белый', 'color2')
												+checkbox('', 'color3', 'color', 'Бирюзовый', 'color3')
												+checkbox('', 'color4', 'color', 'Зеленый', 'color4')
												+checkbox('', 'color5', 'color', 'Коричневый', 'color5')
												+checkbox('none', 'color6', 'color', 'Красный', 'color6')
												+checkbox('', 'color7', 'color', 'Кремовый', 'color7')
												+checkbox('', 'color8', 'color', 'Оранжевый', 'color8')
												+checkbox('', 'color9', 'color', 'Разноцветный', 'color9')
								.panel.panel-default
									.panel-heading
										h4.panel-title
											a(data-toggle='collapse', data-parent='#accordion', href='#collapse3', aria-expanded="false")
												| Дизайнеры
												object
													a(href='#').clear Очистить
									#collapse3.panel-collapse.collapse
										.panel-body
											+checkbox('', 'designers2', 'designers', 'Ив Сен-Лоран', 'designers2')
											+checkbox('none', 'designers3', 'designers', 'Луи Вюиттон', 'designers3')
											+checkbox('', 'designers4', 'designers', 'Пьер Карден', 'designers4')
											+checkbox('none', 'designers5', 'designers', 'Гуччи', 'designers5')
											+checkbox('', 'designers6', 'designers', 'Дольче и Габбана', 'designers6')
								.panel.panel-default
									.panel-heading
										h4.panel-title
											a(data-toggle='collapse', data-parent='#accordion', href='#collapse4', aria-expanded="false")
												| Размеры
												object
													a(href='#').clear Очистить
									#collapse4.panel-collapse.collapse
										.panel-body
											+checkbox('', 'size2', 'size', 'XS', 'size2')
											+checkbox('', 'size3', 'size', 'S', 'size3')
											+checkbox('', 'size4', 'size', 'M', 'size4')
											+checkbox('', 'size5', 'size', 'L', 'size5')
											+checkbox('', 'size6', 'size', 'XL', 'size6')
											+checkbox('none', 'size7', 'size', 'XXL', 'size7')
								.panel.panel-default
									.panel-heading
										h4.panel-title
											a(data-toggle='collapse', data-parent='#accordion', href='#collapse5', aria-expanded="false")
												| Цена
												object
													a(href='#').clear Очистить
									#collapse5.panel-collapse.collapse
										.panel-body
											p Дорого